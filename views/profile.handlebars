<div class="flex">
    <div class="container">
        <h2> Berliner, <span>{{name}}</span> be part of the community!</h2>
        <form method="post">
            <div class="sigButtons">
                {{#if error}}
                    <div class="error">Sorry, error. Try again</div>
                {{/if}}
                <div class="input-text">

                <div class="input-text">
                    <label>
                        Age: <input type="text" name="age">
                    </label>
                </div>
                <div class="input-text">
                    <label>
                        City: <input type="text" name="city">
                    </label>
                </div>
                <div class="input-text">
                    <label>
                        Your Website: <input type="text" name="website">
                    </label>
                </div>


                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button class="btn" name="button">Continue</button>
                </div>
            </div>

        </form>

    </div>
</div>
